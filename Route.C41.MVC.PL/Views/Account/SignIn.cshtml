@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>SignIn</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<form asp-action="SignIn">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" required="">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SignIn">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> SignUp Now!</a></p>
	</div>
</div>

@section ValidationSection {
	<partial name="_ValidationScriptsPartial" />

}