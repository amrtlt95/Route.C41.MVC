@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Employee details</h1>


    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name"  class="form-control" readonly/>
       
    </div>

    <div class="form-group">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" readonly class="form-control" />
       
    </div>


    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" readonly class="form-control" />
       
    </div>

    <div class="form-group">
        <label asp-for="EmployeeType" class="col-form-label"></label>
        <input asp-for="EmployeeType" readonly class="form-control" />
        
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="col-form-label"></label>
        <input asp-for="Gender" readonly class="form-control" />
       
    </div>

    <div class="form-group">
        <label asp-for="HiringDate" class="col-form-label"></label>
        <input asp-for="HiringDate" readonly class="form-control" />
        
    </div>


    <div class="form-group">
        <label asp-for="IsActive" class="col-form-label"></label>
        <input asp-for="IsActive" readonly class="form-control" />
        
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="col-form-label"></label>
        <input asp-for="Phone" readonly class="form-control" />
      
    </div>

    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" readonly class="form-control" />
       
    </div>



<a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>


