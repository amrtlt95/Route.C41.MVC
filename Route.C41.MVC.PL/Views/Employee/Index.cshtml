@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employee";
}

<h1>Employee</h1>
<a asp-action="Create" class="mt-4 btn btn-primary">Create new employee</a>

@if(Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=> D.Name)</th>
                <th>@Html.DisplayNameFor(D=> D.Age)</th>
                <th>@Html.DisplayNameFor(D=> D.Email)</th>
                <th>@Html.DisplayNameFor(D=> D.EmployeeType)</th>
                <th>@Html.DisplayNameFor(D=> D.Gender)</th>
                <th>@Html.DisplayNameFor(D=> D.HiringDate)</th>
                <th>@Html.DisplayNameFor(D=> D.IsActive)</th>
                <th>@Html.DisplayNameFor(D=> D.Phone)</th>
                <th>@Html.DisplayNameFor(D=> D.Salary)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
           
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Email</td>
                    <td>@employee.EmployeeType</td>
                    <td>@employee.Gender</td>
                    <td>@employee.HiringDate</td>
                    <td>@employee.IsActive</td>
                    <td>@employee.Phone</td>
                    <td>@employee.Salary</td>
                    <td> <a asp-action="Details" asp-route-id=@employee.ID class="btn btn-warning"><i class="fa-solid fa-eye"></i> Details</a> </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.ID" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@employee.ID" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</a>
                       @*  <button type="button" data-employee-id="@employee.ID" class="btn btn-danger" data-toggle="modal" data-target="#delete-modal"><i class="fa-solid fa-trash"></i> Delete</button>
                         *@
                        </td>
                </tr>
            }
        </tbody>

    </table>
