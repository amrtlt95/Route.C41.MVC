@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All The Employees We Have In Our Company :)</h1>
<br />
<br />
@* We need to create a table *@
<a asp-controller="Employee" asp-action="Create">Create a new employee in the Company ;)</a>
<br />
<br />
@if (Model.Count() > 0)
{
    <table border="1">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.Age)</td>
                <td>@Html.DisplayNameFor(D => D.Address)</td>
                <td>@Html.DisplayNameFor(D => D.Email)</td>
                @* <td>@Html.DisplayNameFor(D => D.EmployeeType)</td> *@
                <td>@Html.DisplayNameFor(D => D.Gender)</td>
                @* <td>@Html.DisplayNameFor(D => D.HiringDate)</td> *@
                <td>@Html.DisplayNameFor(D => D.IsActive)</td>
                @* <td>@Html.DisplayNameFor(D => D.Phone)</td> *@
                <td>@Html.DisplayNameFor(D => D.Salary)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age)</td>
                    <td>@employee.Address)</td>
                    <td>@employee.Email)</td>
                    @* <td>@employee.EmployeeType)</td> *@
                    <td>@employee.Gender)</td>
                    @* <td>@employee.HiringDate)</td> *@
                    <td>@employee.IsActive)</td>
                    @* <td>@employee.Phone)</td> *@
                    <td>@employee.Salary)</td>

                    <td> <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.ID">Details</a> </td>
                    <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.ID">Update</a></td>
                    <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.ID">Delete</a></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>There is no employees :(</h2>
}


