@model Department
@{
    ViewData["Title"] = "Edit Department";
}

<h1>Edit Department</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">

    <label asp-for="Code" class="col-form-label">@Html.DisplayNameFor(D => D.Code)</label>
    <input asp-for="Code"  class="form-control"/>
    </div>
    
    <div class="form-group">

    <label asp-for="Name" class="col-form-label">@Html.DisplayNameFor(D => D.Name)</label>
    <input asp-for="Name"  class="form-control"/>
    </div>
    
    <div class="form-group">
    <label asp-for="DateCreated" class="col-form-label">@Html.DisplayNameFor(D => D.DateCreated)</label>
    <input asp-for="DateCreated" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" asp-controller="Department" class="btn btn-info">Back To Home</a>
</form>


