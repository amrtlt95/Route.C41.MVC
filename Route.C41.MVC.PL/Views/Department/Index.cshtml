@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All The Departments We Have In Our Company :)</h1>
<br />
<br />
@* We need to create a table *@
<a asp-controller="Department" asp-action="Create">Create a new department in the Company ;)</a>
<br />
<br />
@if(Model.Count()>0){
<table border="1">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(D => D.Name)</td>
            <td>@Html.DisplayNameFor(D => D.Code)</td>
            <td>@Html.DisplayNameFor(D=> D.DateCreated)</td>
            <td>Details</td>
            <td>Update</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Name</td>
                    <td>@department.Code</td>
                    <td>@department.DateCreated</td>
                    <td> <a asp-controller="Department" asp-action="Details" asp-route-id="@department.ID">Details</a> </td>
                    <td><a asp-controller="Department" asp-action="Edit" asp-route-id="@department.ID">Update</a></td>
                    <td><a asp-controller="Department" asp-action="Delete" asp-route-id="@department.ID">Delete</a></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>There is no departments :(</h2>
}


