@model Department
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="mt-4">

<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" readonly/>
</div>

<div class="form-group">
    <label asp-for="Code" class="col-form-label"></label>
    <input asp-for="Code" class="form-control" readonly/>
</div>

<div class="form-group">
    <label asp-for="DateCreated" class="col-form-label"></label>
    <input asp-for="DateCreated" class="form-control" readonly/>
</div>
<div class="mt-4">
 <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i> Edit</a>

        <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
</div>



