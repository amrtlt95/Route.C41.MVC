@model Department
@{
    ViewData["Title"] = "Department Details";
}

<h1>Department Details</h1>

<form>
    <div class="form-group">

    <label asp-for="Code" class="col-form-label">@Html.DisplayNameFor(D=> D.Code)</label>
    <input asp-for="Code" readonly class="form-control"/>
    </div>
<div class="form-group">

    <label asp-for="Name" class="col-form-label">@Html.DisplayNameFor(D=>D.Name)</label>
    <input asp-for="Name" readonly class="form-control"/>
</div>
<div class="form-group">

    <label asp-for="DateCreated" class="col-form-label">@Html.DisplayNameFor(D => D.DateCreated)</label>
    <input asp-for="DateCreated" readonly class="form-control"/>
</div>
</form>
<a asp-action="Edit" asp-controller="Department" asp-route-id="@Model.ID" class="btn btn-primary">Edit</a>
<a asp-action="Index" asp-controller="Department" class="btn btn-info">Back</a>

